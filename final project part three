<?php
include_once 'db_connect.php'; 


$companies = mysqli_query($connection, "SELECT * FROM `Corporate` ");

// Handle DELETE request 
if (isset($_GET['id'])) {
    $id = $_GET['id'];
    
//DELETE statement
    $stmt = mysqli_prepare($connection, "DELETE FROM `Corporate` WHERE `ID` = ?");
    mysqli_stmt_bind_param($stmt, "i", $id); // 
    
    if (mysqli_stmt_execute($stmt)) {
        header("Location: corporate_index.php");
        exit();
    } else {
        
        echo "<script>alert('Delete Error: Cannot delete corporate due to linked jobs. Please delete associated jobs first.'); window.location.href = 'corporate_index.php';</script>";
        exit();
    }
    mysqli_stmt_close($stmt);
}
?>
<!--HTML STRUCTURE -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Corporate List</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container col-md-8 mt-5">
    <h4>
        Corporate List
        <a href="corporate_add.php" class="float-end btn btn-sm btn-secondary">
            Add Corporate
        </a>
    </h4>
    <table class="table table-secondary">
        <thead>
            <tr>
                <th>ID</th> 
                <th>Company Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th colspan="2" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            <?php 
            // Use foreach loop 
            if (isset($companies) && mysqli_num_rows($companies) > 0) { 
                foreach ($companies as $company): ?>
                <tr>
                    <td><?= $company['ID'] ?></td>
                    <td><?= $company['Company_name'] ?></td>
                    <td><?= $company['email'] ?></td>
                    <td><?= $company['phone'] ?></td>
                    
                    <td><a href="corporate_edit.php?id=<?= $company['ID'] ?>" class="btn btn-sm btn-warning">Edit</a></td>
                    
                    <td><a onclick="return confirm('Are you sure you want to delete this Corporate?')"
                            href="corporate_index.php?id=<?= $company['ID'] ?>" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
                <?php endforeach; 
            } else {
                echo "<tr><td colspan='6' class='text-center'>No Corporates added yet.</td></tr>";
            }
            ?>
        </tbody>
    </table>
</div>
</body>
</html>


<?php

?>
